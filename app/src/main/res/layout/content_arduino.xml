<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/fondonivelseis"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lab.inmotion.learny.Activities.ArduinoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Control"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="ON"
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="340dp"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="OFF"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
        android:id="@+id/button3"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="410dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="360dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
         />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonAdelante"
        android:background="@android:color/transparent"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="95dp" />
    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonAtras"
        android:background="@android:color/transparent"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="95dp" />
    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonDeracha"
        android:background="@android:color/transparent"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="180dp" />
    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonIzqui"
        android:background="@android:color/transparent"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonPlay"
        android:background="@mipmap/play43"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="595dp"
        android:onClick="playMusic" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonStop"
        android:background="@mipmap/pause48"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="780dp"
        android:onClick="stopMusic" />

</RelativeLayout>
