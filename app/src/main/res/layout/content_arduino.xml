<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/correcionseis"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lab.inmotion.learny.Activities.ArduinoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Control"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="ON"
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="340dp"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="OFF"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
        android:id="@+id/button3"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="410dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="360dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_light"
         />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/btn_ahead"
        android:background="@android:color/transparent"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="75dp"
        android:onClick="btnAhead" />
    <Button
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/btn_back"
        android:background="@android:color/transparent"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="95dp"
        android:nestedScrollingEnabled="false"
        android:onClick="btnBack" />
    <Button
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/btn_right"
        android:background="@android:color/transparent"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="180dp"
        android:onClick="btnRight" />
    <Button
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/btn_left"
        android:background="@android:color/transparent"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="10dp"
        android:onClick="btnLeft" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonPlay"
        android:onClick="playMusic"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/buttonStop"
        android:layout_alignStart="@+id/buttonStop" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/buttonStop"
        android:background="@android:color/transparent"
        android:onClick="stopMusic"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_alignTop="@+id/btn_ahead"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
