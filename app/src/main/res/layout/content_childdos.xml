<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/formulario_xhdpi"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lab.inmotion.learny.Activities.ChildRecordActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/finalizar_xhdpi"
        android:id="@+id/button2"
        android:onClick="btnFinishRecord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grado de escolarización"
        android:id="@+id/lbl_semester"
        android:layout_marginTop="241dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginRight="101dp"
        android:layout_marginEnd="101dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_semester"
        android:layout_below="@+id/lbl_semester"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_alignLeft="@+id/lbl_semester"
        android:layout_alignStart="@+id/lbl_semester" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de aplicación de la prueba"
        android:id="@+id/lbl_dateTest"
        android:layout_below="@+id/txt_place"
        android:layout_alignLeft="@+id/txt_place"
        android:layout_alignStart="@+id/txt_place" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/txt_dayTest"
        android:layout_below="@+id/lbl_dateTest"
        android:hint="Día"
        android:layout_alignLeft="@+id/txt_semester" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/txt_mothTest"
        android:hint="Mes"
        android:layout_alignTop="@+id/txt_dayTest"
        android:layout_toRightOf="@+id/txt_dayTest"
        android:layout_toEndOf="@+id/txt_dayTest" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/txt_yearTest"
        android:layout_alignTop="@+id/txt_mothTest"
        android:layout_toRightOf="@+id/txt_mothTest"
        android:layout_toEndOf="@+id/txt_mothTest"
        android:hint="Año" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de la prueba"
        android:id="@+id/lbl_place"
        android:layout_below="@+id/txt_semester"
        android:layout_alignLeft="@+id/txt_semester"
        android:layout_alignStart="@+id/txt_semester" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_place"
        android:layout_below="@+id/lbl_place"
        android:layout_alignLeft="@+id/lbl_place"
        android:layout_alignStart="@+id/lbl_place"
        android:layout_alignRight="@+id/txt_semester"
        android:layout_alignEnd="@+id/txt_semester" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_school"
        android:layout_alignTop="@+id/lbl_school"
        android:layout_alignLeft="@+id/lbl_school"
        android:layout_alignStart="@+id/lbl_school"
        android:layout_alignRight="@+id/txt_semester"
        android:layout_alignEnd="@+id/txt_semester" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colegio o escuela"
        android:id="@+id/lbl_school"
        android:layout_above="@+id/txt_semester"
        android:layout_alignLeft="@+id/lbl_semester"
        android:layout_alignStart="@+id/lbl_semester"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
