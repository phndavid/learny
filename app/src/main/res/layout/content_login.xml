<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/fondologin_xhdpi"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_activity_login"
    tools:context="com.lab.inmotion.learny.Activities.LoginActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@mipmap/entrar_xhdpi"
        android:id="@+id/btn_signIn"
        android:onClick="btnSignIn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:focusableInTouchMode="true"
        android:padding="15dp"
        android:ems="10"
        android:id="@+id/txt_passwd"
        android:background="@mipmap/textologin_xhdpi"
        android:layout_above="@+id/btn_signIn"
        android:layout_alignLeft="@+id/txt_username"
        android:layout_alignStart="@+id/txt_username" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:hint="learny@ejemplo.com"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:background="@mipmap/textologin_xhdpi"
        android:ems="10"
        android:id="@+id/txt_username"
        android:layout_above="@+id/txt_passwd"
        android:layout_alignRight="@+id/btn_signIn"
        android:layout_alignEnd="@+id/btn_signIn" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@mipmap/registrarse_xhdpi"
        android:id="@+id/btn_signup"
        android:onClick="btnSignUp"
        android:layout_below="@+id/btn_signIn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
