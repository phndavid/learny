<?xml version="1.1" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lab.inmotion.learny.Activities.OptionsObjectActivity"
    tools:showIn="@layout/activity_options_object">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleOption"
        android:background="@mipmap/popupoveja"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option7"
        android:background="@mipmap/ovejauno"
        android:onClick="btnOption7"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/option8"
        android:layout_toStartOf="@+id/option8"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option8"
        android:background="@mipmap/ovejados"
        android:onClick="btnOption8"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/option9"
        android:layout_toStartOf="@+id/option9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option9"
        android:background="@mipmap/ovejatres"
        android:onClick="btnOption9"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/option4"
        android:layout_toRightOf="@+id/option5"
        android:layout_toEndOf="@+id/option5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option4"
        android:background="@mipmap/ovejacuatro"
        android:onClick="btnOption4"
        android:layout_above="@+id/option7"
        android:layout_alignLeft="@+id/option1"
        android:layout_alignStart="@+id/option1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option5"
        android:background="@mipmap/ovejacinco"
        android:onClick="btnOption5"
        android:layout_alignBottom="@+id/option4"
        android:layout_toLeftOf="@+id/option3"
        android:layout_toStartOf="@+id/option3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option3"
        android:background="@mipmap/ovejaseis"
        android:onClick="btnOption3"
        android:layout_above="@+id/option5"
        android:layout_alignRight="@+id/titleOption"
        android:layout_alignEnd="@+id/titleOption" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option1"
        android:background="@mipmap/ovejasiete"
        android:onClick="btnOption1"
        android:layout_alignBottom="@+id/option2"
        android:layout_toLeftOf="@+id/option5"
        android:layout_toStartOf="@+id/option5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option6"
        android:background="@mipmap/ovejaocho"
        android:onClick="btnOption6"
        android:layout_marginTop="28dp"
        android:layout_alignTop="@+id/option4"
        android:layout_alignLeft="@+id/option9"
        android:layout_alignStart="@+id/option9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option2"
        android:background="@mipmap/ovejanueve"
        android:onClick="btnOption2"
        android:layout_above="@+id/option5"
        android:layout_alignRight="@+id/option5"
        android:layout_alignEnd="@+id/option5" />
</RelativeLayout>
