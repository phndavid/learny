<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/registro_xhdpi"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_activity_sign_up"
    tools:context="com.lab.inmotion.learny.Activities.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Usuario"
        android:padding="8dp"
        android:background="@mipmap/textologin_xhdpi"
        android:ems="10"
        android:id="@+id/txt_passwd"
        android:layout_below="@+id/txt_school"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="CotraseÃ±a"
        android:padding="8dp"
        android:background="@mipmap/textologin_xhdpi"
        android:ems="10"
        android:id="@+id/txt_confirmPasswd"
        android:layout_below="@+id/txt_passwd"
        android:layout_alignLeft="@+id/txt_passwd"
        android:layout_alignStart="@+id/txt_passwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nombre completo"
        android:padding="8dp"
        android:background="@mipmap/textologin_xhdpi"
        android:ems="10"
        android:id="@+id/txt_school"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/crear_xhdpi"
        android:id="@+id/btn_signup"
        android:onClick="btnSignUp"
        android:layout_below="@+id/txt_confirmPasswd"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
